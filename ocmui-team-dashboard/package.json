{
  "name": "ocmui-team-dashboard",
  "version": "1.0.0",
  "description": "OCMUI Team Dashboard - JIRA/GitHub integration, team timezones, and productivity tools",
  "main": "server/index.js",
  "scripts": {
    "start": "yarn build; lsof -ti:3017 | xargs kill -9 2>/dev/null || true; node server/index.js & sleep 2 && open http://localhost:3017 && wait",
    "start:dev": "lsof -ti:3017 | xargs kill -9 2>/dev/null || true; webpack serve --mode development --hot --port 3017",
    "build": "webpack --mode production",
    "start:react": "cd react && npm run dev",
    "build:react": "cd react && npm run build",
    "dev": "concurrently \"yarn build --watch\" \"yarn start\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-static-gzip": "^2.1.7",
    "marked": "4.3.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "split.js": "^1.6.5"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "babel-loader": "^9.1.0",
    "concurrently": "^8.2.0",
    "copy-webpack-plugin": "11",
    "css-loader": "^6.8.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "keywords": [
    "jira",
    "github",
    "dashboard",
    "productivity",
    "team-tools"
  ],
  "author": "",
  "license": "MIT"
}
