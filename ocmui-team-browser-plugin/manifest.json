{
  "manifest_version": 3,
  "name": "OCMUI Team Tools",
  "version": "1.0.0",
  "description": "OCMUI team browser extension: JIRA/GitHub navigation, team timeboard, and productivity tools",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "OCMUI Team Tools"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "https://issues.redhat.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "timeboard/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
